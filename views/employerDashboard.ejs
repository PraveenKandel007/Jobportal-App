<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employer Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: bisque;
            color: #333;
        }
        .navbar {
            background-color: rgb(8, 71, 92);
        }
        .navbar-brand, .nav-link {
            color: bisque !important;
        }
        .hero-section {
            background-color: rgb(8, 71, 92);
            color: #fff;
            padding: 50px 20px;
            text-align: center;
        }
        .company-card {
            background-color: #fef8e7;
            border: none;
        }
        .btn-primary {
            background-color: rgb(8, 71, 92);
            border: none;
        }
        .btn-primary:hover {
            background-color: #2183aa;
        }
        footer {
            background-color: rgb(8, 71, 92);
            color: #fff;
            padding: 10px 0;
            text-align: center;
            margin-top: 20px;
            margin-top: 25%;
        }
       
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#">Employer Dashboard</a>
            <div class="d-flex">
                <a href="/company/register" class="btn btn-primary me-2">Register New Company</a>
                <a href="/logout" class="btn btn-danger">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section">
        <h1 class="display-5 fw-bold">Welcome to Employer's Dashboard ðŸ˜Š</h1>
        <p class="lead">Manage your companies and job postings effortlessly.</p>
    </section>

    <!-- Registered Companies Section -->
    <div class="container py-5">
        <h2 class="text-center mb-4">Registered Companies</h2>
        <div class="row">
            <% if (companies && companies.length > 0) { %>
                <% companies.forEach(company => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card company-card p-3 shadow-sm">
                            <h3 class="card-title text-primary"><%= company.companyName %></h3>
                            <p><strong>Address:</strong> <%= company.address %></p>
                            <p><strong>Contact Info:</strong> <%= company.contactInfo %></p>
                            <a href="/company/<%= company.companyId %>/jobs" class="btn btn-primary mt-3">Create/Manage Jobs</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12">
                    <p class="text-center text-muted">No companies registered yet.</p>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        &copy; 2024 Next Step Workforce Solutions. All rights reserved.
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
